<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollViewBulkBarcodeContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ScanBarcodeBulkActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/bulkupdatebarcodeConstraintLayout"
        tools:context=".ScanBarcodeBulkActivity">

        <TextView
            android:id="@+id/codeLabel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:text="Scan or enter Barcode to edit container details"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#15BAB6"
            android:textSize="14dp"
            android:visibility="visible"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/enteredbarcodeValue"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:drawablePadding="10dp"
            android:focusableInTouchMode="true"
            android:ems="10"
            android:hint="Enter Barcode Details"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/codeLabel"
            app:layout_constraintTop_toBottomOf="@+id/codeLabel" />

        <Button
            android:id="@+id/addBarCodeToList"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/sign_out_border"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#15BAB6"
            android:textSize="14dp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/enteredbarcodeValue"
            app:layout_constraintTop_toTopOf="@+id/enteredbarcodeValue" />

        <TextView
            android:id="@+id/empty_barcodelist_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="There are no items to display."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#D51A1A"
            android:textSize="14dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/addBarCodeToList"
            app:layout_constraintStart_toStartOf="@+id/enteredbarcodeValue"
            app:layout_constraintTop_toBottomOf="@+id/enteredbarcodeValue" />
        <ListView
            android:id="@+id/barcodeList"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:nestedScrollingEnabled="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:divider="#FF9900"
            android:dividerHeight="0.5px"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/addBarCodeToList"
            app:layout_constraintStart_toStartOf="@+id/enteredbarcodeValue"
            app:layout_constraintTop_toBottomOf="@+id/enteredbarcodeValue"
            />

        <Button
            android:id="@+id/scanRFID"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sign_out_border"
            android:text="Scan RFID"
            android:textAllCaps="false"
            android:textColor="#15BAB6"
            android:textSize="14dp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/empty_barcodelist_text_view"
            app:layout_constraintStart_toStartOf="@+id/empty_barcodelist_text_view"
            app:layout_constraintTop_toBottomOf="@+id/empty_barcodelist_text_view" />

        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sign_out_border"
            android:text="Update Container"
            android:textAllCaps="false"
            android:textColor="#15BAB6"
            android:textSize="14dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/scanRFID"
            app:layout_constraintStart_toStartOf="@+id/scanRFID"
            app:layout_constraintTop_toBottomOf="@+id/scanRFID" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>