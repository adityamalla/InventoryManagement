<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerInfo">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/sign_out_border"
        android:stretchColumns="0,1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="328dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelProductName"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:fontFamily="@font/roboto_regular"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textColor="#9B9B9B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="bottom"
                android:text="TextViewValueeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelCode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="Code"
                android:textColor="#9B9B9B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/codeValue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="bottom"
                android:text="code"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelVol"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="Volume/Mass"
                android:textColor="#9B9B9B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="bottom"
                android:text="155"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>