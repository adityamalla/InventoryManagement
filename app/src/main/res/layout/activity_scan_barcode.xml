<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanBarcodeActivity">

    <TextView
        android:id="@+id/scanBarcodeLabel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:enabled="false"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:text="Scan or enter barcode to view and edit container details"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#15BAB6"
        android:textSize="14dp"
        android:visibility="visible"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/barcode"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter barcode details"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/scanBarcodeLabel"
        app:layout_constraintStart_toStartOf="@+id/scanBarcodeLabel"
        app:layout_constraintTop_toBottomOf="@+id/scanBarcodeLabel" />
    <Button
        android:id="@+id/viewData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sign_out_border"
        android:text="View Barcode Details"
        android:textAllCaps="false"
        android:textColor="#15BAB6"
        android:textSize="14dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/barcode"
        app:layout_constraintStart_toStartOf="@+id/barcode"
        app:layout_constraintTop_toBottomOf="@+id/barcode" />
</androidx.constraintlayout.widget.ConstraintLayout>