<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.safetystratus.inventorymanagement">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <protected-broadcast android:name="com.motorola.motocare.INTENT_TRIGGER" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ss_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ss_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.InventoryManagement"
        tools:replace="android:allowBackup">
        <activity android:name=".ContainerDetailsActivity" android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ScanBarcodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ContinueActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PostSuccess"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SyncDBActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LocateTagActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RFIDScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RoomList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BuildingList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UnitsList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StatusList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RFIDActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:screenOrientation="portrait" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>